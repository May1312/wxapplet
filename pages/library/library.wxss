@import '../index/index.wxss';

.upload{
  display: block;
  width: 200rpx;
  margin:  auto;
  position: absolute;
  right: 5px;
  top:5px;
  background-color: #F2FFE5;
}
.logo{
  display: block;
  width: 250rpx;
  height: 250rpx;
  margin:  50rpx auto;
}
.m-search{
  position: relative;
  width: 620rpx;
  margin: 0 auto;

}
.icon-search{
  position: absolute;
  top: 36rpx;
  left: 25rpx;
  width: 38rpx;
  height: 38rpx;
}
.icon-cancel{
  position: absolute;
  top: 7rpx;
  right: 105rpx;
  width: 38rpx;
  height: 38rpx;
  padding: 30rpx 20rpx 30rpx 10rpx;
}
.search-inp{
  padding: 30rpx 170rpx 30rpx 70rpx;
  box-shadow: 0 0 20rpx #2087DD;
  border-radius: 15rpx; 
}
.p_style{
  font-weight: 200;
}
.search-btn{
  position: absolute;
  top: 0;
  right: 0;
  border: 0;
  background: #338FFC; 
  color: #fff;
  border-radius: 0 15rpx 15rpx 0; 
  padding: 30rpx 25rpx;
  line-height: 1.4rem;
  text-align: center;
  font-size: 30rpx;
}
.search-btn::after{
  content: none;
}


.search-content{
    width: 100%;
    background: #338FFC;
}
.form-in{
    display: flex;
    flex-direction: row;
    padding: 20rpx;
}
.input-placeholder{
  color: #b2b2b2;
}
.scroll-content{
  background: #f9fbfe;
}
.list-content{
  padding: 0 20rpx;
}
.bookitem{
  background: #fff;
  border-radius: 20rpx; 
  margin: 20rpx 0;
  padding: 20rpx 40rpx;
  color: #555;
  box-shadow: 0 0 20rpx #eee; 
}
.bookitem .name{
  font-size: 34rpx;
  padding-bottom: 10rpx;
}
.bookitem .author{
  font-size: 28rpx;
  padding-bottom: 10rpx;
}
.bookitem .other-infos{
  display: flex;
  flex-direction: row;
  font-size: 22rpx;
  color: #b2b2b2;
}
.bookitem .other-infos .info-item{
  margin-right: 20rpx;
  
}
.bookitem .other-infos .overflow{
  max-width: 300rpx;
   overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}


/*上拉加载*/
.load-tip{
  display: flex;
  justify-content: center;
  align-content: center;
  font-size: 28rpx;
  color: #b2b2b2;
  padding-bottom: 20rpx;
  line-height: 45rpx;
}
.icon-load{
  width: 45rpx;
  height: 45rpx;
  /*animation: spin 2s linear infinite;*/
}
